header.header
    a(href="index.html").container-logo
        img(src="images/logo.png", alt="logo").logo
    mixin nav(active)
        ul.navigation
            - var nav = ['Footwear', 'Clothing', 'Accessories', 'Brands', 'Clearance']
                each item in nav
                    li(class="navigation__item")
                        a(href="#" class="navigation__link" + (active == item ? ' navigation__link_active' : ''))= item
    mixin nav('Footwear')
    ul.header-user-buttons-list
        li.header-user-buttons__item
            a(href="#").header-user-buttons__link.header-user-buttons__link_search
                | Search
        li.header-user-buttons__item
            a(href="#").header-user-buttons__link.header-user-buttons__link_cart.header-user-buttons__link_active
                | Cart 
                span.count
                    | (2)
        li.header-user-buttons__item
            a(href="#").header-user-buttons__link.header-user-buttons__link_sign-in
                | Sign in
