header.header
    .container
        a(href="index.html").container-logo
            img(src="images/logo.png", alt="logo").logo
        mixin nav(active)
            - var nav = ['home', 'pages', 'journal', 'portfolio', 'features', 'contact']
            ul.navigation__list
                each item in nav
                    li(class="navigation__item")
                        a(href="#" class="navigation__link" + (active == item ? ' navigation__link_active' : ''))= item
        mixin nav('home')
